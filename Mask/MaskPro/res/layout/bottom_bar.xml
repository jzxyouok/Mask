<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="0dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true" >

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true" >

        <ImageView
            android:id="@+id/id_img_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_gray" />

        <TextView
            android:id="@+id/id_tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:textColor="@color/color_bottom_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/classify"
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_classify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/classify_gray" />

        <TextView
            android:id="@+id/id_tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textColor="@color/color_bottom_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend"
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_recommend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/recommend_gray" />

        <TextView
            android:id="@+id/id_tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textColor="@color/color_bottom_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topic"
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_topic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/topic_gray" />

        <TextView
            android:id="@+id/id_tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="话题"
            android:textColor="@color/color_bottom_text_color" />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_list"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:orientation="vertical" >
    <RelativeLayout 
       	android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp" >
        
     <ImageView 
         android:id="@+id/resource_img"
         android:layout_width="100dp"
         android:layout_height="70dp"
         android:adjustViewBounds="true"
         android:src="@drawable/bg_pic_loading"/>   
        
     <TextView
            android:id="@+id/resource_name"
            style="@style/TextH2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/resource_img"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/resource_img"
            android:text="@string/app_name" /> 
            
     <TextView
            android:id="@+id/resource_data"
            style="@style/TextH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resource_name"
            android:layout_toRightOf="@+id/resource_img"
            android:layout_marginLeft="10dp"
            android:text="@string/app_name" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/resource_share"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:background="@drawable/bg_btn_love"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_btn_share" />

        <TextView
            android:id="@+id/comment_num_show"
            style="@style/TextH2"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn_love"
            android:drawableLeft="@drawable/ic_btn_comment"
            android:paddingLeft="3dp" />

        <TextView
            android:id="@+id/look_num_show"
            style="@style/TextH2"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/comment_num_show"
            android:background="@drawable/bg_btn_love"
            android:drawableLeft="@drawable/ic_btn_look"
            android:paddingLeft="3dp" />
    </RelativeLayout>

</LinearLayout>


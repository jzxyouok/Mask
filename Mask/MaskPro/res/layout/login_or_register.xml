<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="@color/color_backgdround_gray">

     <com.myview.CircularImage
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/bigger_logo" />
    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:background="#afffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/color_bottom_text_color" />

        <EditText
            android:id="@+id/accountEt_login"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:padding="5dp"
            android:hint="邮箱"
            android:textColorHint="#afbababa"
            android:background="@drawable/edit_view_shape"
            android:ems="10" >

        </EditText>

        <EditText
            android:id="@+id/pwdEt_login"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:password="true"
            android:hint="输入密码"
            android:textColorHint="#afbababa"
            android:background="@drawable/edit_view_shape"
            android:ems="10" />

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="登录" 
            android:textColor="@color/white"
            android:background="@color/color_top_bsr"/>
        
        <Button
            android:id="@+id/Register_Btn"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="注册" 
            android:textColor="#fff"
            android:background="@color/color_top_bsr"/>
        
    </LinearLayout>

    <Button
        android:id="@+id/forget_Btn"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/loginPanel"
        android:layout_below="@+id/loginPanel"
        android:background="#afffffff"
        android:text="忘记密码>"
        android:textColor="@color/color_top_bsr" />
            
</RelativeLayout>
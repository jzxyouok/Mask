<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_list"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <com.myview.CircularImage
            android:id="@+id/user_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/user_icon_default_main" />

        <TextView
            android:id="@+id/user_name"
            style="@style/TextH2"
            android:textColor="@color/text_color_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user_logo"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/user_logo"
            android:text="@string/app_name" />
 
        <TextView
            android:id="@+id/school"
            style="@style/TextH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_toRightOf="@id/user_logo"
            android:text="@string/app_name" />
    </RelativeLayout>

    <com.myview.EmoticonsTextView
        android:id="@+id/content_text"
        style="@style/TextH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="fasfetgfwetywyryhdrhsdrhtserht5dfhxdh" />

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_pic_loading" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_action_fav"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:background="@drawable/bg_btn_love"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_btn_share" />

        <TextView
            android:id="@+id/item_action_comment"
            style="@style/TextH2"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn_love"
            android:drawableLeft="@drawable/ic_btn_comment"
            android:paddingLeft="3dp" />

        <TextView
            android:id="@+id/item_action_love"
            style="@style/TextH2"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/item_action_comment"
            android:background="@drawable/bg_btn_love"
            android:drawableLeft="@drawable/ic_btn_look"
            android:paddingLeft="3dp" />
    </RelativeLayout>

</LinearLayout>